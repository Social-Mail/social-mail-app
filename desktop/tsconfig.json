{
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "module":"CommonJS",
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsxFactory": "XNode.create",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2018",
            "ES2021.WeakRef"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"tests"
    ]
}